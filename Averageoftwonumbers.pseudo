private void AddMedication_Click(object sender, RoutedEventArgs e)
{
    // Show input dialog for medication name
    InputDialog nameDialog = new InputDialog("Enter medication name:");
    if (nameDialog.ShowDialog() == true)
    {
        string medicationName = nameDialog.ResponseText;

        // Show input dialog for medication time
        InputDialog timeDialog = new InputDialog("Enter time (HH:mm):");
        if (timeDialog.ShowDialog() == true && DateTime.TryParse(timeDialog.ResponseText, out DateTime medicationTime))
        {
            Medications.Add(new Medication { Name = medicationName, Time = medicationTime, IsTaken = false });
        }
        else
        {
            MessageBox.Show("Invalid time format.");
        }
    }
}
