private void ApplyFilter_Click(object sender, RoutedEventArgs e)
{
    if (double.TryParse(FilterInterestRate, out double interestRate))
    {
        // Filter accounts based on the parsed interest rate
        FilteredAccounts = new ObservableCollection<Account>(
            _accounts.Where(a => a.InterestPercentage == interestRate)
        );
    }
    else
    {
        MessageBox.Show("Please enter a valid interest rate.");
    }
}
